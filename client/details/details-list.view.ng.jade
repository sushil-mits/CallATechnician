.details-list(layout='row')
  span(flex='')
  div(layout='column')
    h1 Details
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a detail
      md-input-container
        label Name
        input(ng-model='newDetail.name', placeholder='Name')
      input.md-button(type='submit', value='Add')
    div(layout='row', layout-padding='')
      md-input-container(flex='65')
        label Search
        input(type='search', ng-model='search', placeholder='Search')
      md-select(ng-model='orderProperty', flex='35')
        md-option(value='1') Ascending
        md-option(value='-1') Descending

    ul
      li(dir-paginate='detail in details | itemsPerPage: perPage', total-items='detailsCount.count',  current-page='page')
        p 
          a(href='/details/{{detail._id}}') {{ detail.name }}
          button(ng-click='remove(detail)') &times;
    dir-pagination-controls.md-accent(on-page-change='pageChanged(newPageNumber)')

    p Total number of details: {{detailsCount.count}}
  span(flex='')