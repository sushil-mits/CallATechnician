.handyman-list(layout='row')
  span(flex='')
  div(layout='column')
    h1 Handyman
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a handyman
      md-input-container
        label Name
        input(ng-model='newHandyman.name', placeholder='Name')
      input.md-button(type='submit', value='Add')
    div(layout='row', layout-padding='')
      md-input-container(flex='65')
        label Search
        input(type='search', ng-model='search', placeholder='Search')
      md-select(ng-model='orderProperty', flex='35')
        md-option(value='1') Ascending
        md-option(value='-1') Descending

    ul
      li(dir-paginate='handyman in handyman | itemsPerPage: perPage', total-items='handymanCount.count',  current-page='page')
        p 
          a(href='/handyman/{{handyman._id}}') {{ handyman.name }}
          button(ng-click='remove(handyman)') &times;
    dir-pagination-controls.md-accent(on-page-change='pageChanged(newPageNumber)')

    p Total number of handyman: {{handymanCount.count}}
  span(flex='')