.customer-list(layout='row')
  span(flex='')
  div(layout='column')
    h1 Customer
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a customer
      md-input-container
        label Name
        input(ng-model='newCustomer.name', placeholder='Name')
      input.md-button(type='submit', value='Add')
    div(layout='row', layout-padding='')
      md-input-container(flex='65')
        label Search
        input(type='search', ng-model='search', placeholder='Search')
      md-select(ng-model='orderProperty', flex='35')
        md-option(value='1') Ascending
        md-option(value='-1') Descending

    ul
      li(dir-paginate='customer in customer | itemsPerPage: perPage', total-items='customerCount.count',  current-page='page')
        p 
          a(href='/customer/{{customer._id}}') {{ customer.name }}
          button(ng-click='remove(customer)') &times;
    dir-pagination-controls.md-accent(on-page-change='pageChanged(newPageNumber)')

    p Total number of customer: {{customerCount.count}}
  span(flex='')